#include <stdio.h>

void main(void){
  printf("Hello, friend.\n");
  printf("Say something short and sweet or say \"STOP\" to stop...\n");
  int looping = 1;
  char userText[100];

  while(looping)
  {
    printf(">>");
    fgets(userText, sizeof(userText), stdin);
    if (strcmp(userText, "STOP") == 0) looping = 0;
    printf("You said: %s\n", userText);
  }
  
  printf("Goodbye, friend.\n");
}
